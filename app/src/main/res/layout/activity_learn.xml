<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.example.android.kys.TestActivity">

    <include android:id="@+id/learn_picture_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/person_name"
        layout="@layout/question_picture"/>

    <TextView
        android:id="@+id/person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/person_number"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/person_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/person_name"
        android:text="@string/prev"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/person_number"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/person_name"
        android:gravity="center"
        android:text="@string/next"
        android:textSize="40sp" />

</RelativeLayout>
