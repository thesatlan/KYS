<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/center_shim"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/button_picture_1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/button_picture_3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/center_shim"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/button_picture_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/button_picture_4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/center_shim"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/button_picture_3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/center_shim"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/button_picture_4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/center_shim"
        android:scaleType="fitXY" />

</RelativeLayout>
