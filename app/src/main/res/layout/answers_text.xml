<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_text_1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_above="@+id/button_text_2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_text_2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_above="@+id/button_text_3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_text_3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_above="@+id/button_text_4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_text_4"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
